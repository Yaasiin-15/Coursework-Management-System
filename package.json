{
  "name": "coursework-management-system",
  "version": "1.0.0",
  "description": "Full-stack coursework management system with Node.js backend and Next.js frontend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm install",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf backend/node_modules frontend/node_modules node_modules",
    "test": "cd backend && npm test && cd ../frontend && npm test",
    "test:connection": "node test-connection.js",
    "setup": "node setup.bat"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "keywords": [
    "coursework",
    "management",
    "education",
    "nodejs",
    "nextjs",
    "mongodb",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT"
}